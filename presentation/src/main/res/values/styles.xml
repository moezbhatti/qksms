<resources>

    <style name="TextPrimary">
        <item name="android:textSize">16sp</item>
        <item name="textColor">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="textColor">tertiary</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textSize">12sp</item>
        <item name="textColor">tertiary</item>
    </style>

    <style name="TextTab">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="textColor">primary</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">secondary</item>
    </style>

    <style name="CollapsingToolbarCollapsedText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapsingToolbarExpandedText">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="DrawerRow">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DrawerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textColor">primary</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="PopupThemeDark" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/backgroundDark</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
    </style>

    <style name="PopupThemeBlack" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
    </style>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

</resources>
